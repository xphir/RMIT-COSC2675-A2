<% provide(:title, 'All Categories') %>
<h1>All Categories</h1>
<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
<div >
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-center">Courses</th>
      <th>Latest Course</th>
      <th>Date Added</th>
      <th>Last Updated</th>
    </tr>
  </thead>
  <tbody>
    <%= render @categories %>
  </tbody>
</table>
