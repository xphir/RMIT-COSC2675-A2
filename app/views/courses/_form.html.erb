<div class="form">
  <%= form_for course, url: url, method: method do |f| %>
    <%= render 'shared/error_messages', object: course %>
      <!--Name-->
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Course Name' %>
      </div>
      <!--Prerequisite-->
      <div class="form-group">
        <%= f.label :prerequisite %>
        <%= f.text_field :prerequisite, class: 'form-control', placeholder: 'Course Prerequisite' %>
      </div>
      <!--Description-->
      <br>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area  :description, class: 'form-control', placeholder: 'Course Description', rows: 10 %>
      </div>
      <!--Category-->
      <div class="form-group">
        <%= f.label :categories %>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name  do |b| %>
          <span>
            <%= b.check_box %>
            <%= b.label %>
          </span>
        <% end %>
      </div>
      <!--Location-->
      <div class="form-group">
        <%= f.label :locations %>
        <%= f.collection_check_boxes :location_ids, Location.all, :id, :name do |b| %>
          <span>
            <%= b.check_box %>
            <%= b.label %>
          </span>
        <% end %>
      </div>
      <!--File-->
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control btn btn-default btn-file', accept: 'image/jpeg,image/gif,image/png' %>
      </div>
      <!--Submit-->
    </div>
    <%= f.submit class: 'btn btn-primary btn-block' %>
  <% end %>
</div>


<script type="text/javascript">
  $('#course_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 10) {
      alert('Maximum file size is 10MB. Please choose a smaller file.');
    }
  });
</script>