<div class="heading">
  <div class="container">
    <%= link_to "YourCourseApp", '/', class: "navbar-brand" %>
  </div>
</div>
<!--WHOLE Navbar START-->
<nav class="navbar navbar-default">
  <div class="container">
    <!--Left Navbar START-->
    <ul class="nav navbar-nav">
      <!--Categories Dropdown START-->
      <li class="dropdown">
        <a href="/categories" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% @categories.each do |category| %>
            <li><%= link_to category.name, category %></li>
          <% end %>
          <li role="separator" class="divider"></li>
          <li><%= link_to 'All Categories', categories_path %></li>
          <% if logged_in? %>
            <li><%= link_to 'Create Category', new_category_path %></li>
          <% end %>
        </ul>
      </li>
      <!--Categories Dropdown END-->
      <!--Locations Dropdown START-->
      <li class="dropdown">
        <a href="/locations" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Locations <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% @locations.each do |location| %>
            <li><%= link_to location.name, location %></li>
          <% end %>
          <li role="separator" class="divider"></li>
          <li><%= link_to 'All Locations', locations_path %></li>
          <% if logged_in? %>
            <li><%= link_to 'Create Location', new_location_path %></li>
          <% end %>
        </ul>
      </li>
      <!--Locations Dropdown END-->
      <!--Courses Dropdown START-->
      <li class="dropdown">
        <a href="/courses" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Courses <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'All Courses', courses_path %></li>
          <% if logged_in? %>
            <li><%= link_to 'Create Course', new_course_path %></li>
          <% end %>
        </ul>
      </li>
      <!--Courses Dropdown END-->
    </ul>
    <!--Left Navbar END-->
    <!--Right Navbar START-->
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Contact Us", new_message_url, class: 'nav-item' %></li>
      <% if logged_in? %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %><span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to "View Profile", user_path(current_user) %></li>
          <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "Log out", logout_path, method: :delete %></li>
        </ul>
      </li>
      <% else %>
        <li><%= link_to "Log In", login_path, class: 'nav-item' %></li>
      <% end %>
    </ul>
    <!--Right Navbar END-->
  </div>
</nav>
<!--WHOLE Navbar END-->